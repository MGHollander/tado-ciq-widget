<layouts>
  <layout id="MainLayout">
    <drawable id="TadoHeader" />
    
    <label id="MainLayoutLoading" x="center" y="center" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.Loading" />
    <label id="MainLayoutMore1" x="center" y="190" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    <label id="MainLayoutMore2" x="center" y="210" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_CENTER" />
  </layout>

  <layout id="Gcm">
    <drawable id="IconGcm" />
    
    <label x="center" y="100" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.ConnectString1" />
    <label x="center" y="125" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.ConnectString2" />
    <label x="center" y="150" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.ConnectString3" />
  </layout>
  
  <layout id="LoginLayout">
    <drawable id="IconGcm" />
    
    <label x="center" y="100" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.GoToPhoneString1" />
    <label x="center" y="125" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" text="@Strings.GoToPhoneString2" />
  </layout>
  
  <layout id="ErrorLayout">
    <label id="Message" x="center" y="center" justification="Gfx.TEXT_JUSTIFY_CENTER" color="FFFFFF"/>
  </layout>
  
  <layout id="ZoneLayout">  
    <drawable id="backgroundColorWhite" />
    <drawable id="TadoHeader" />
    
    <bitmap id="IconArrowUp" x="center" y="top" filename="../images/icon_arrow_up_24x24.png" />
    <bitmap id="IconArrowDown" x="center" y="bottom" filename="../images/icon_arrow_down_24x24.png" />
    
    <label id="ZoneName" x="center" y="25%" text="Zone name here :-D" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    <label id="ZoneTemprerature" x="center" y="35%" text="20°C / 21°C" font="Gfx.FONT_MEDIUM" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    
  </layout>
</layouts>